<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>html/main.html</welcome-file>
    </welcome-file-list>

    <!-- 登录验证 -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- 注册用户 -->
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- 查找用户 -->
    <servlet>
        <servlet-name>FindUser</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.FindUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindUser</servlet-name>
        <url-pattern>/findUser</url-pattern>
    </servlet-mapping>

    <!-- 修改用户 -->
    <servlet>
        <servlet-name>ChangeUser</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.ChangeUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangeUser</servlet-name>
        <url-pattern>/changeUser</url-pattern>
    </servlet-mapping>





</web-app>