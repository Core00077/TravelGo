<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>html/main.html</welcome-file>
    </welcome-file-list>

    <!-- 登录验证 -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.user.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- 登录验证 -->
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.user.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- 注册用户 -->
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.user.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- 查找用户 -->
    <servlet>
        <servlet-name>FindUser</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.user.FindUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindUser</servlet-name>
        <url-pattern>/findUser</url-pattern>
    </servlet-mapping>

    <!-- 查找用户名 -->
    <servlet>
        <servlet-name>FindUsername</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.user.FindUsernameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindUsername</servlet-name>
        <url-pattern>/findUsername</url-pattern>
    </servlet-mapping>

    <!-- 修改用户 -->
    <servlet>
        <servlet-name>ChangeUser</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.user.ChangeUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangeUser</servlet-name>
        <url-pattern>/changeUser</url-pattern>
    </servlet-mapping>

    <!-- 直接查找所有商品 -->
    <servlet>
        <servlet-name>FindAll</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.good.FindAllServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindAll</servlet-name>
        <url-pattern>/findAll</url-pattern>
    </servlet-mapping>

    <!-- 通过Id查找商品 -->
    <servlet>
        <servlet-name>FindGoodById</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.good.FindGoodByIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindGoodById</servlet-name>
        <url-pattern>/findGoodById</url-pattern>
    </servlet-mapping>

    <!-- 通过City查找商品 -->
    <servlet>
        <servlet-name>FindGoodByCity</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.good.FindGoodByCityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindGoodByCity</servlet-name>
        <url-pattern>/findGoodByCity</url-pattern>
    </servlet-mapping>
    
    <!-- 查找收藏夹详情 -->
    <servlet>
        <servlet-name>Love</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.good.FindLoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Love</servlet-name>
        <url-pattern>/love</url-pattern>
    </servlet-mapping>

    <!--添加收藏夹-->
    <servlet>
        <servlet-name>AddLove</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.good.AddLoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddLove</servlet-name>
        <url-pattern>/addlove</url-pattern>
    </servlet-mapping>

    <!--判断收藏夹-->
    <servlet>
        <servlet-name>IsLove</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.good.IsLoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IsLove</servlet-name>
        <url-pattern>/islove</url-pattern>
    </servlet-mapping>
    <!--删除收藏夹-->
    <servlet>
        <servlet-name>DeleteLove</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.good.DeleteLoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteLove</servlet-name>
        <url-pattern>/deletelove</url-pattern>
    </servlet-mapping>
    <!--删除多个收藏夹-->
    <servlet>
        <servlet-name>DeleteLoves</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.good.DeleteLovesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteLoves</servlet-name>
        <url-pattern>/deleteloves</url-pattern>
    </servlet-mapping>

    <!--上传图片-->
    <servlet>
        <servlet-name>UploadPics</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.good.UploadPicServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadPics</servlet-name>
        <url-pattern>/uploadpics</url-pattern>
    </servlet-mapping>
    <!--发布商品-->
    <servlet>
        <servlet-name>PublishGood</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.good.PublishGoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PublishGood</servlet-name>
        <url-pattern>/publishgood</url-pattern>
    </servlet-mapping>
    <!--查看认证-->
    <servlet>
        <servlet-name>viewCertificate</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.user.ViewCertificateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>viewCertificate</servlet-name>
        <url-pattern>/viewCertificate</url-pattern>
    </servlet-mapping>
    <!--提交认证-->
    <servlet>
        <servlet-name>SubmitCertificate</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.user.SubmitCertificateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubmitCertificate</servlet-name>
        <url-pattern>/submitCertificate</url-pattern>
    </servlet-mapping>
    <!--上传认证图片-->
    <servlet>
        <servlet-name>UploadCertificatePic</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.user.UploadCertificatePicServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadCertificatePic</servlet-name>
        <url-pattern>/uploadCertificatePic</url-pattern>
    </servlet-mapping>
    <!--查找身份认证信息-->
    <servlet>
        <servlet-name>FindCertificates</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.admin.FindCertificatesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindCertificates</servlet-name>
        <url-pattern>/findCertificates</url-pattern>
    </servlet-mapping>
    <!--管理员登录-->
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.admin.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/adminLogin</url-pattern>
    </servlet-mapping>
    <!--管理员审核-->
    <servlet>
        <servlet-name>ChangeCertificate</servlet-name>
        <servlet-class>cn.corechan.travel.servlet.admin.ChangeCertificateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangeCertificate</servlet-name>
        <url-pattern>/changeCertificate</url-pattern>
    </servlet-mapping>
</web-app>